<idea-plugin>
  <id>com.your.company.unique.plugin.id</id>
  <name>Plugin display name here</name>
  <version>1.0</version>
  <vendor email="jojoldu@gmail.com" url="https://github.com/jojoldu">jojoldu</vendor>

  <description><![CDATA[
      Translate the Text <br>
      <em>most HTML tags may be used</em>
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="145.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <projectConfigurable groupId="tools" displayName="Translator Plugin" id="preferences.TranslatorConfigurable" instance="ui.TranslatorConfigurable" />
  </extensions>

  <actions>
    <action id="action.Translator" class="action.Translator" text="action.Translator" description="Change Text from current file ">
      <keyboard-shortcut keymap="$default" first-keystroke="alt 1"/>
    </action>
  </actions>

</idea-plugin>